<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Medical Access Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @*@Styles.Render("~/Content/ej/web/flat-saffron/ej.web.all.min.css")*@
    @Styles.Render("~/Content/ej/web/bootstrap-theme/ej.web.all.min.css")
    @Scripts.Render("~/Scripts/jquery-3.1.1.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/jsrender.min.js")
    @Scripts.Render("~/Scripts/ej/ej.web.all.min.js")
    @Scripts.Render("~/Scripts/ej/ej.unobtrusive.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")

    <style>
        #Wrapper {
            /*background-color: #3F51B5;*/
            z-index: 1;
            height: 500px;
            width: 250px;
            position: fixed;
        }

        #page-content-wrapper {
            margin-left: 260px;
            margin-right: 7px;
        }
    </style>

</head>
<body>

    <div class="navbar navbar-fixed-top">

        @Html.Partial("_LoginPartial")

        @Html.EJ().Menu("mainMenu").Items(items =>
   {
       items.Add().Url(Url.Action("IndexMAULT", "Home")).Text("Dashboard");

       items.Add().Url("#").Text("MAULT Orders").Children(child =>
       {
           child.Add().Id("OrdersART").Url(Url.Action("MAULTOrders", "LMIS_ART")).Text("ART");
           child.Add().Id("OrdersHIVTestKits").Url(Url.Action("MAULTOrders", "LMIS_HIVTestKits")).Text("HIV Test Kits");
           child.Add().Id("OrdersLaboratory").Url(Url.Action("MAULTOrders", "LMIS_Laboratory")).Text("Laboratory");
           child.Add().Id("OrdersSMC").Url(Url.Action("MAULTOrders", "LMIS_SMC")).Text("SMC");
           child.Add().Id("OrdersOISTI").Url(Url.Action("MAULTOrders", "LMIS_OISTI")).Text("OIs");//Referral
           child.Add().Id("OrdersViralLoad").Url(Url.Action("MAULTOrders", "LMIS_ViralLoad")).Text("Viral Load");//

       });

       items.Add().Url("#").Text("MAULT Order Allocations").Children(child =>
       {
           child.Add().Id("Allocations").Url(Url.Action("AllocationIndex", "LMIS_MAULT")).Text("Allocation");
       });


       items.Add().Url("#").Text("MAULT SAP Export").Children(child =>
       {
           child.Add().Id("SAP").Url(Url.Action("SAPExport", "LMIS_MAULT")).Text("SAP Export");

       });

       //items.Add().Url("#").Text("MAULT Queries").Children(child =>
       //{
       //});

       items.Add().Url("#").Text("Customer Care Unit").Children(child =>
       {
           child.Add().Id("Complaints_CCU").Url(Url.Action("Complaints", "fo_complaint")).Text("Customer Care Unit (CCU)");
       });

       items.Add().Url("#").Text("CHSS").Children(child =>
       {
           child.Add().Id("CHSS_Dashboard").Url(Url.Action("Index", "CHSS_MAUL")).Text("Dashboard");
           child.Add().Id("CHSS_PatientCareAndManagement").Url(Url.Action("PatientCareAndManagement", "CHSS_MAUL")).Text("ART Patient care and management");
           child.Add().Id("CHSS_StockManagement").Url(Url.Action("StockManagement", "CHSS_MAUL")).Text("Stock management");
           child.Add().Id("CHSS_Traceability").Url(Url.Action("Traceability", "CHSS_MAUL")).Text("Traceability of commodities");
           child.Add().Id("CHSS_OrderingAndReporting").Url(Url.Action("OrderingAndReporting", "CHSS_MAUL")).Text("Ordering and Reporting");
           child.Add().Id("CHSS_StoreManagement").Url(Url.Action("StoreManagement", "CHSS_MAUL")).Text("Store management");
           child.Add().Id("CHSS_ExpiryTracking").Url(Url.Action("ExpiryTracking", "CHSS_MAUL")).Text("Expiry tracking");
           child.Add().Id("CHSS_FeedBack").Url(Url.Action("FeedBack", "CHSS_MAUL")).Text("Feedback details");
           child.Add().Id("CHSS_ScoringSummary").Url(Url.Action("ScoringSummary", "CHSS_MAUL")).Text("Scoring summary");
       });
       items.Add().Url("#").Text("M&E").Children(child =>
       {
           //child.Add().Id("ComplaintsCCU").Url(Url.Action("Complaints", "fo_complaint")).Text("Customer Care Unit (CCU)");
       });

       items.Add().Id("Utilities").Url("#").Text("Utilities").Children(child =>
       {
           child.Add().Id("Register").Url(Url.Action("Register", "Account")).Text("Register Users");
           //child.Add().Id("ManageUsers").Url(Url.Action("ManageUsers", "Account")).Text("Manage Users");

       });

   }).EnableSeparator(false).CssClass("Black-Menu")
    </div>

    <div class="container body-content">
        @RenderSection("BreadCrumb", required: false)
        @RenderBody()
    </div>
    <footer>
        <div class="container body-content">
            <hr />
            <p>&copy; @DateTime.Now.Year - Medical Access Uganda LTD</p>
            <hr />
            <p class="box-title"><b> @String.Format("{0 : dddd, MMMM d, yyyy}", DateTime.Now) </b><span class="label label-primary"></span></p>
        </div>

    </footer>

    @Html.EJ().ScriptManager()
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <style type="text/css" class="cssStyles">
        .myclass {
            float: right;
        }
    </style>
    <script>

    </script>

    <script type="text/javascript">
        jQuery(function ($) {
            var menuObj = $("#mainMenu").ejMenu({ width: "100%", enableSeparator: false });
        });

    </script>
    <style type="text/css" class="cssStyles">
        #More, #Utilities, #Register, #Help, #ManageUsers, #Sign_In {
            float: right;
        }
    </style>

    <style type="text/css" class="cssStyles">
        .Black-Menu .e-menu, .e-menu.e-horizontal .e-list > ul {
            background: #800000;
        }

            .Black-Menu .e-menu.e-horizontal .e-list > a {
                color: white;
            }
    </style>

</body>
</html>
